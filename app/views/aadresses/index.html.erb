<p id="notice"><%= notice %></p>

<h1>Aadresses</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Line1</th>
      <th>Country</th>
      <th>State</th>
      <th>Pincode</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aadresses.each do |aadress| %>
      <tr>
        <td><%= aadress.email %></td>
        <td><%= aadress.name %></td>
        <td><%= aadress.phone %></td>
        <td><%= aadress.line1 %></td>
        <td><%= aadress.country %></td>
        <td><%= aadress.state %></td>
        <td><%= aadress.pincode %></td>
        <td><%= aadress.user_id %></td>
        <td><%= link_to 'Show', aadress %></td>
        <td><%= link_to 'Edit', edit_aadress_path(aadress) %></td>
        <td><%= link_to 'Destroy', aadress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

